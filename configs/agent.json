{
  "workspace": "data/workspace",
  "data_dir": "data",
  "security": {
    "default_permissions": ["read_files", "web_search"],
    "require_approval": ["write_files", "shell_exec"],
    "default_role": "operator",
    "roles": {
      "viewer": {
        "permissions": ["read_files", "web_search"],
        "max_risk_level": "low",
        "require_approval": []
      },
      "operator": {
        "permissions": ["read_files", "web_search", "shell_exec", "write_files", "git_read", "git_write", "database_read", "browser_navigate"],
        "max_risk_level": "high",
        "require_approval": ["shell_exec", "git_write"]
      },
      "admin": {
        "permissions": ["read_files", "web_search", "shell_exec", "write_files", "git_read", "git_write", "code_exec", "database_read", "browser_navigate"],
        "max_risk_level": "critical",
        "require_approval": ["code_exec"]
      }
    },
    "user_roles": {}
  },
  "budget": {
    "default_limit_usd": 10.0
  },
  "sandbox": {
    "type": "process",
    "max_cpu_cores": 1,
    "max_memory_mb": 512,
    "max_execution_seconds": 30,
    "network_allowed": false,
    "docker": {
      "image": "jkaninda/akili-runtime:latest",
      "cpu_cores": 0.5,
      "pids_limit": 64
    }
  },
  "tools": {
    "file": {
      "allowed_paths": ["/tmp/akili"],
      "max_file_size_bytes": 10485760
    },
    "web": {
      "allowed_domains": [],
      "max_response_bytes": 5242880,
      "timeout_seconds": 15
    },
    "code": {
      "allowed_languages": ["python3", "sh"]
    },
    "git": {
      "allowed_paths": []
    }
  },
  "providers": {
    "default": "anthropic",
    "fallback": ["ollama", "openai", "gemini"],
    "anthropic": {
      "model": "claude-sonnet-4-5-20250929"
    },
    "openai": {
      "model": "gpt-4o"
    },
    "gemini": {
      "model": "gemini-2.0-flash"
    },
    "ollama": {
      "model": "qwen3:8b",
      "base_url": "http://localhost:11434"
    }
  },
  "runtime": {
    "mode": "agent",
    "agent": {
      "agent_id": "worker-1",
      "gateway_url": "ws://localhost:8080/ws/agents",
      "token": "change-me",
      "name": "",
      "version": "",
      "roles": [],
      "capabilities": [],
      "environment_scope": "development",
      "max_concurrent_tasks": 5,
      "task_timeout_seconds": 300,
      "heartbeat_interval_seconds": 30,
      "reconnect_interval_seconds": 5,
      "stale_claim_seconds": 120,
      "key_file": ""
    }
  },
  "orchestrator": {
    "enabled": true,
    "skills_dir": "runbooks/",
    "max_depth": 5,
    "max_tasks": 50
  },
  "approval": {
    "ttl_seconds": 300
  },
  "memory": {
    "enabled": true,
    "max_history_messages": 100,
    "max_message_bytes": 32768
  }
}
